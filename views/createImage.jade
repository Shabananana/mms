extends layout

block content
  script(src='/javascripts/imageUploader.js')
  div(class='span-12')
    h2 Upload an image
    form(action='/image/create', method='POST', enctype='multipart/form-data')
      input(type='file', name='files[]', id='files', multiple)
      output(id='list')
      button(type='submit', id='upload-image') Save
      button(type='button', id='cancel-upload') Clear
 